@model ModularisWebInterface.Models.UserManagement.SingleUserModel
<form>
    <div class="container">
        <div class="row border border-secondary bg-light">
            <div class="container">
                <div class="row">
                    <h2>User info</h2>
                </div>
                <div class="row">
                    <div class="col-1">
                        <p>User Id:</p>
                    </div>
                    <div class="col-10">
                        <input asp-for="@Model.Id" class="form-control-plaintext text-left align-top" readonly="@(true)" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <p>Username:</p>
                    </div>
                    <div class="col-10">
                        <input type="text" asp-for="@Model.UserName" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row bg-secondary text-white border border-primary">
            <div class="container">
                <div class="row">
                    <h2>Activation</h2>
                </div>
                <div class="row">
                    <div class="col-1">
                        <p>Activated:</p>
                    </div>
                    <div class="col-10">
                        <input asp-for="@Model.IsActivated" type="checkbox" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row border border-secondary bg-light">
            <div class="container">
                <div class="row">
                    <h2>Claims</h2>
                </div>
                @for (var i = 0; i < Model.UserClaims.Count(); i++)
                {
                    <div class="row">
                        <div class="col-6">
                            <input asp-for="@Model.UserClaims[i].ClaimType" class="form-control-plaintext text-left" readonly="@(true)" />
                        </div>
                        <div class="col-6">
                            <input type="checkbox" asp-for="@Model.UserClaims[i].HasClaim" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row d-flex flex-row-reverse">
            <input type="submit" asp-controller="UserManagement" asp-action="ModifyUser" value="Save" class="btn btn-primary btn-sm text-white">
            <input type="submit" asp-controller="UserManagement" asp-action="UserListDisplay" value="Cancel" class="btn btn-secondary btn-sm text-white">
        </div>
    </div>
    
    
</form>