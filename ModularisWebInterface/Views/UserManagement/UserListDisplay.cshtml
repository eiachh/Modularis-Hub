@model ModularisWebInterface.Models.UserManagement.UsersModel

    <h1 class="display-4">Registered Users</h1>
    <div class="col-12">
        @if (Model.Users == null || Model.Users.Count() == 0)
        {
            <p>There are no users registered!</p>
            return;
        }

        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    <label asp-for=@Model.Users.FirstOrDefault().Id></label>
                </th>
                <th>
                    <label asp-for=@Model.Users.FirstOrDefault().UserName></label>
                </th>
                <th>
                    <label>Action</label>
                </th>
            </tr>

            @foreach (var user in Model.Users)
            {

                <tr>
                    <td>
                        <p>@user.Id</p>
                        
                    </td>
                    <td>
                            <p>@user.UserName</p>
                    </td>
                    <td>
                        <a asp-controller="UserManagement" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm text-white">Edit</a>
                        <a asp-controller="UserManagement" asp-action="DeleteUser" asp-route-id="@user.Id" onclick="return confirm('Are you sure that you want to activate this user?')" class="btn btn-danger btn-sm text-white">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
